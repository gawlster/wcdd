// When making changes, run `npx prisma migrate dev --name <name>`
// Then run `npx prisma generate` to generate a new prisma client with the new schema

generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model FormSubmission {
    id           Int      @id @default(autoincrement())
    createdAt    DateTime @default(now())
    hasResponded Boolean  @default(false)
    name         String
    email        String
    phone        String
    message      String
}
